<h1>Hello world</h1>

<% if notice %>
  <div class="alert alert-primary" role="alert">
    <%= notice %>
  </div>
<% end %>

<% if alert %>
  <div class="alert alert-danger" role="alert">
    <%= alert %>
  </div>
<% end %>

<% if user_signed_in? %>
  <p>Привет, <%= current_user.name %></p>
<% end %>

<p><%= link_to 'Войти', new_user_session_path %></p>
<p><%= link_to 'Регистрация', new_user_registration_path %></p>
<p><%= link_to 'Выйти', destroy_user_session_path, :method => :delete %></p>
<p><%= link_to 'Встречи', meetings_path %></p>
<p><%= link_to 'Админ-панель', admin_path %></p>

<ul>
  <% @cities.each do |city| %>
    <li><%= city.title %></li>
  <% end %>
</ul>