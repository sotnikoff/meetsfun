<div class="row">
  <div class="col-sm" id="main-city-meets">
    <div class="row">
      <div class="col-sm">
        <% if user_signed_in? %>
          <h1>Встречи в твоем городе</h1>
        <% else %>
          <h1>Встречи</h1>
        <% end %>
      </div>
    </div>

    <div class="row">


      <% @meets.each do |meet| %>

        <div class="col-sm">
          <div class="row">
            <div class="col-sm text-center meetings-image">
              <%= image_tag meet.image_url(:large), :class => 'img-fluid' unless meet.image.blank? %>
            </div>
          </div>
          <div class="row">
            <div class="col-sm text-center meeting-header">
              <h3><%= meet.title %></h3>
            </div>
          </div>
          <div class="row">
            <div class="col-sm text-center meeting-time"><%= meet.date_time_start %></div>
          </div>
          <div class="row">
            <div class="col-sm text-center meetings-description"><%= meet.address %></div>
          </div>
        </div>

      <% end %>


    </div>

  </div>

</div>


