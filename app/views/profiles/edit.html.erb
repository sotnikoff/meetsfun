<h1>Мой профиль</h1>
<%= form_for(@user, url: profile_path) do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :required => true, autofocus: true, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :city_id %>
    <%= f.collection_select :city_id , City.order(:title),:id,:title, include_blank: false %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>