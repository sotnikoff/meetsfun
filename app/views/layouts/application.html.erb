<!DOCTYPE html>
<html>
  <head>
    <title>Meets.fun</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application',
                            'https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&amp;subset=cyrillic',
                            media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="container" id="mf-main-container">
      <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
        <%= link_to 'meets.fun', root_path, :class => 'navbar-brand', :id => 'logo' %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <% unless user_signed_in? %>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <%= link_to 'Вход', new_user_session_path, :class => 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Регистрация', new_user_registration_path, :class => 'nav-link' %>
              </li>
            </ul>
          <% else %>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <%= link_to 'Выход', destroy_user_session_path, :class => 'nav-link', :method => :delete %>
              </li>
            </ul>
          <% end %>
        </div>
      </nav>

      <% if notice %>
        <div class="alert alert-primary" role="alert">
          <%= notice %>
        </div>
      <% end %>

      <% if alert %>
        <div class="alert alert-danger" role="alert">
          <%= alert %>
        </div>
      <% end %>

      <%= yield %>
    </div>

  </body>
</html>
